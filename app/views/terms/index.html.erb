<a href='/'>Back to Search</a>
<div>
  <table>
    <tbody>
      <% if @terms.size == 0 %>
        <h2>No results for '<%=@searched_term%>' <a href="/terms/new">add a term</a></h2>
      <%else%>
        <h2>Search Results</h2>
        <% @terms.each do |term| %>
          <tr>
            <td>
              <ul>
                <li><%= term.term_en %></li>
                <li><%= term.ac_field_en %></li>
              </ul>
            </td>
            <td><%= term.definition_ar %> 
            <a href="terms/<%=term.id%>">More</a></td>
          </tr>
        <% end %>
      <%end%>
    </tbody>
  </table>
</div>
