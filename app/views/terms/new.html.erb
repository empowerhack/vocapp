<h2>Submit a new term</h2>

<%= form_for @term do |f| %>
  <p>
    <%= f.label "Enter your term:" %><br>
    <%= f.text_field :term_en, placeholder: "Enter term", value: @term_name_from_index %>
  </p>
  <p>
    <%= f.label "Choose academic field:" %><br>
    <%= f.select :field_id, options_from_collection_for_select(@fields, 'id', 'name'), {prompt: true}, {required: true}  %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
