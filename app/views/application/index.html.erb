<div class="container-fluid text-center alt-theme hero-form-wrap">

  <form role="form" action="/terms" method="get" id="term_search" class="form-inline">
    <div class="form-group">
      <label for="term-search">Translate</label>
      <input type="text" name="term_en" placeholder=" anything" id="term-search" autofocus/>
    </div>
    <div class="form-group">
      <label for="field-search">in</label>
      <select class="form-control input-sm" name ="field_id" form="term_search" id="field-search">
          <option value="" disabled selected>all fields</option>
          <% @fields.each do |field| %>
            <option value="<%= field.id %>"><%= field.name %></option>
          <% end %>
      </select>
    </div>
    <input type="submit" value="Search">
  </form>

</div>
