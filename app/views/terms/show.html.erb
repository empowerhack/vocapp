<a href="#" onclick="history.go(-1)">Back to search results</a>
<table>
  <tbody>
    <tr>
      <td><%= @term.term_en %></td>
    </tr>
    <tr>
      <td><%= @fields.find(@term.field_id).name %></td>
    </tr>
    <tr>
      <td><%= @term.context_en %></td>
    </tr>
    <% @answers.each do |answer| %>
    <tr>
      <td><%= answer.definition %>
        submitted by <%=User.find(answer.user_id).email%>
        Upvotes: <%=answer.upvotes.count%>
        Downvotes: <%=answer.downvotes.count%>
        <%if current_user.has_upvoted?(answer)%>
          <button id="add-term-btn" class="btn btn-success" type="button">Upvote</button>
          <form role="form" action="/terms/<%=@term.id%>/answers/<%=answer.id%>/upvotes/<%=Upvote.find_by(user_id: current_user.id, answer_id: answer.id).id%>" method='delete'>
            <button id="add-term-btn" type="submit" class="btn btn-default">Downvote</button>
          </form>
        <% elsif current_user.has_downvoted?(answer)%>
          <form role="form" action="/terms/<%=@term.id%>/answers/<%=answer.id%>/downvotes/<%=Downvote.find_by(user_id: current_user.id, answer_id: answer.id).id%>" method='delete'>
            <button id="add-term-btn" type="submit" class="btn btn-default">Upvote</button>
          </form>
          <button id="add-term-btn" class="btn btn-danger" type="button">Downvote</button>
        <% else %>
          <form role="form" action="/terms/<%=@term.id%>/answers/<%=answer.id%>/upvotes" method='post'>
            <button id="add-term-btn" type="submit" class="btn btn-default">Upvote</button>
          </form>
          <form role="form" action="/terms/<%=@term.id%>/answers/<%=answer.id%>/downvotes" method='post'>
            <button id="add-term-btn" type="submit" class="btn btn-default">Downvote</button>
          </form>
        <%end%>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
  <%= form_for([@term, @term.answers.build]) do |f| %>

    <p>
      <%= f.label :definition %><br>
      <%= f.text_area :definition %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  <% else %>
    <a href="../users/sign_in">Sign in</a> to add a definition 
<% end %>
