<h2>Submit a new term</h2>
<form role="form" action="/terms" method='post' id="term_search">
  <div class="form-group col-xs-3">
    <label for="term">Enter your term:</label>
    <input id='new_term_name' type="text" name="term_en" placeholder="Enter term" class="form-control" required="true">
    <button id="add-term-btn" type="submit" class="btn btn-default">Add Term</button>
  </div>

  <div class="form-group col-xs-2">
    <label for="price">Choose academic field:</label>
    <select class="form-control" name ="field_id" form="term_search" required="true">
      <option value="" disabled selected>Pick a field...</option>
      <% @fields.each do |field| %>
        <option value="<%= field.id %>"><%= field.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group col-xs-3">
    <label for="term">Add some context (optional):</label>
    <input type="text" name="context_en" placeholder="Enter context" class="form-control">
  </div>

</form>
