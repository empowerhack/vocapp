<a href='/'>Back to Search</a>
<div>
  <table>
    <tbody>
      <% if @terms.size == 0 %>
        <h2>No results for '<%=@searched_term%>' <a href="/terms/new">add a term</a></h2>
      <%else%>
        <h2>Search Results</h2>
        <% @terms.each do |term| %>
          <tr>
            <td>
              <ul>
                <li><%= term.term_en %></li>
                <li><%= @fields.find(term.field_id).name %></li>
              </ul>
            </td>
            <% if term.answers.length == 0 %>
              <td>
            <li>  No answer yet. <a href="/terms/<%=term.id%>">Answer this request</a> </li>
              </td>
          <%else%>
            <td><%= term.answers[0].definition %>
            <a href="terms/<%=term.id%>">More</a></td>
          <%end%>
          </tr>
        <% end %>
      <%end%>
    </tbody>
  </table>
</div>
